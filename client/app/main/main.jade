div(ng-include='"components/shell/shell.html"')

.container
  // Input form with add capability
  md-content(layout-padding)
      form(ng-submit="add()", autocomplete="off")
        md-input-container
          md-icon(md-svg-src="content:send")
          input(ng-model="userTypedStockName", type="text", placeholder="Add a stock", style='text-transform:uppercase')

  //Tab
  md-tabs(md-dynamic-height, md-border-bottom, ng-hide="isLoading")
    md-tab
      | 6 months

  // Loading spinner
  div(ng-show="isLoading", layout="row", layout-sm="column", layout-align="space-around")
    md-progress-circular(md-mode="indeterminate")

  // Chart object
  #chart(layout-wrap)

  // Buttons with remove capability
  section(layout="row", layout-wrap, ng-hide="isLoading")
    div(ng-repeat='stock in stocks')
      md-button.md-raised(ng-click="removeStock(stock, $index)")
        | {{stock}}
        span#close(ng-show='moreThanOneLeft(stocks)')
          | &nbsp;&times;
